<h1>Create your new restaurant</h1>
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, :collection => ["chinese", "italian", "japanese", "french", "belgian"]%>
    <%= f.submit "Submit", class: "btn btn-primary m-3" %>
  <% end %>
<%= link_to 'previous page', restaurants_path, class: 'btn btn-primary m-3' %>
